html
  head
    title 
    block scripts
        script(src="https://kit.fontawesome.com/3f4bdd8d17.js" crossorigin="anonymous")
    block style
        style
            link(rel="stylesheet" href="https://unpkg.com/simplebar@latest/dist/simplebar.css")
            include ../../static/design.css
            include ../../static/style.css
            include ../../static/search.css
            include ../../static/stylesignup.css
  body
    block content
        nav#navbar 
            div.logo 
                img(src="../../static/img/bg6.png", alt="Error Loading Image")
            ul.navlist
                li #[a(href="#") My Store]
            div.rightnav 
                if(currentUser)
                    ul
                        li #[a(href="/username") #{currentUser.name}]
                        li #[a(href="/changepassword") Change Password]
                        li #[a(href="/logout") Log Out]
        div.container
            div.cont
                include ../partials/sidebar.pug
            div.container1 
                div.search 
                    h1 Search Product 
                    div.block
                        include ../partials/messages.pug
                    form(action="/search",method="GET")
                        input(type="text",name="sku",placeholder="Enter product sku" required)
                        button(class="newuserbtn")
                            |Search
                    div.results     
                        div.info
                            |Title:  #{productData.title}
                        div.info
                            |Price:  #{productData.newprice}
                        div.info
                            |Stock:  #{productData.newstock}
                        div.info 
                            |SKU:    #{productData.sku}