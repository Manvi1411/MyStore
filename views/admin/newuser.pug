html
  head
    title 
    block scripts
        script(src="https://kit.fontawesome.com/3f4bdd8d17.js" crossorigin="anonymous")
    block style
        style
            link(rel="stylesheet" href="https://unpkg.com/simplebar@latest/dist/simplebar.css")
            include ../../static/design.css
            include ../../static/style.css
            include ../../static/newuser.css
            include ../../static/stylesignup.css
  body
    block content
        nav#navbar 
            div.logo 
                img(src="../../static/img/bg6.png", alt="Error Loading Image")
            ul.navlist
                li #[a(href="#") My Store]
            div.rightnav 
                if(currentUser)
                    ul
                        li #[a(href="/username") #{currentUser.name}]
                        li #[a(href="/changepassword") Change Password]
                        li #[a(href="/logout") Log Out]
        div.container
            div.cont
                include ../partials/sidebar.pug
            div.container1 
                div.short
                    h1 Add New Product 
                    div.block 
                        include ../partials/messages.pug
                    form(action="/new",method="GET")
                        input(type="text", name="search", placeholder="Enter URL" required)
                        button(class="newuserbtn") 
                            |Fetch Data 
                div.large 
                    form(action="/new", method="POST")
                        input(type="text",class="form-control",name="url",placeholder="Product Url",value=productData.productUrl readonly required) 
                        input(type="text",class="form-control",name="title",placeholder="Produc Title" ,value=productData.title readonly required) 
                        input(type="text",class="form-control",name="price",placeholder="Product Price",value=productData.price readonly required) 
                        input(type="text",class="form-control",name="stock",placeholder="Product Stock",value=productData.stock readonly required) 
                        input(type="text",class="form-control",name="sku",placeholder="Enter SKU" required) 
                        button(class="newuserbtn")
                            |Save Data