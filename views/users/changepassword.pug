html
  head
    title 
    block scripts
        script(src="https://kit.fontawesome.com/3f4bdd8d17.js" crossorigin="anonymous")
    block style
        style
            link(rel="stylesheet" href="https://unpkg.com/simplebar@latest/dist/simplebar.css")
            include ../../static/design.css
            include ../../static/stylesignup.css
            //- include ../../static/design.css
            include ../../static/style.css
            include ../../static/changepassword.css
            //- include ../../static/stylelogin.css
  body
    block content
        nav#navbar 
            div.logo 
                img(src="../../static/img/bg6.png", alt="Error Loading Image")
            ul.navlist
                li #[a(href="#") My Store]
            div.rightnav 
                if(currentUser)
                    ul
                        li #[a(href="/username") #{currentUser.name}]
                        li #[a(href="/changepassword") Change Password]
                        li #[a(href="/logout") Log Out]
        div.container
            div.cont
                include ../partials/sidebar.pug
            div.container1
                div.small2
                h1 Change Password
                div.block
                    include ../partials/messages.pug
                form(action="/changepassword",method="post")
                    div.box 
                        input(type="password",name="password",id="password",class="passwords",placeholder="Enter Password")
                    div.box 
                        input(type="password",name="confirmpassword",id="password",class="passwords",placeholder="Confirm Password")
                    div.box
                        button(class="newuserbtn", name="submit", type="submit")
                            | Change Password
    
        